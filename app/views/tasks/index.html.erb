<h1>Tasks List</h1>

<table border="1">
  <thead>
    <tr>
      <td>Name</td>
      <td>Content</td>
      <td>Action</td>
      </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= link_to "Edit" %> |
          <%= link_to  "Delete"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Create a task", new_task_path %>
